/* 统一所有元素的盒子模型 */
page, view, scroll-view, swiper, swiper-item, movable-area, movable-view, cover-view, cover-image, icon, text, rich-text, progress, burron, checkbox, editor, form, input, label, picker, picker-view, radio, slider, switch, textarea, navigator, audio, camera, image, video, live-player, live-pusher, map, canvas, web-view, ad, official-account, open-data, barcode, list, cell, recycle-list, waterfall, resresh {
  box-sizing: border-box;
